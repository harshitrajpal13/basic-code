#include<stdio.h>
int main()

{
    int length, width, area, perimeter;

    printf("Enter length of the Rectangle\n");
    scanf("%d", &length);

    printf("Enter width of the Rectangle\n");
    scanf("%d", &width);

    area      =     (length * width);
    perimeter = 2 * (length + width);

    if(area > perimeter)
    {
        printf("yes, area(%d) is greater than its perimeter(%d)\n", 
               area, perimeter);
    }
    else
    {
        printf("Area(%d) is not greater than its perimeter(%d)\n", 
               area, perimeter);
    }

    return 0;
}
