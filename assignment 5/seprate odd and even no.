#include <stdio.h>

int main()
{
    int arr[100];
    int i, num;
	
       printf(" the number of elements to be stored  :\n");
       scanf("%d",&num);
   
       for(i=0;i<num;i++)
            {
	      printf(" %d \n ",i);
	      scanf("%d",&arr[i]);
	    }
	    
	     printf("Even numbers  \n\n");
	    for(i = 0; i<num; i++)
	     if(arr[i] % 2 ==0 )
	     {
	       printf(" %d\n ",arr[i]);
	     }
	    
	      printf("odd numbers \n \n");
	      for(i = 0; i<num; i++)
	         if(arr[i] % 2 ==1 )
	     {  
	       printf(" %d ",arr[i]);
	     }
	    
	    
	    
	    
}
	    
